<?xml version="1.0" encoding="utf-8"?>
<androidPlugin>
    <!-- BqLog prebuilt Android deployment: aar for distribution, .so files consumed only during compilation -->

    <buildGradleAdditions>
        <insert>
            android {
                repositories {
                    flatDir {
                        dirs 'src/main/java/main/libs'
                    }
                }
            }

            dependencies {
                implementation(name: 'bqlog', ext: 'aar')
            }
        </insert>
    </buildGradleAdditions>

    <resourceCopies>
        <copyFile src="$S(PluginDir)/bqlog.aar" dst="$S(BuildDir)/src/main/libs/bqlog.aar" />
    </resourceCopies>
</androidPlugin>
